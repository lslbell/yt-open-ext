{
    "name": "YouTube Quick Search",
    "version": "1.0.0",
    "description": "Searches for the selected text in YouTube",
    "manifest_version": 3,
    "author": "Lewis Bell",
    "minimum_chrome_version": "88",
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}